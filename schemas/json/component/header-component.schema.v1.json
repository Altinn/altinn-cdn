{
    "$id": "https://raw.githubusercontent.com/Altinn/altinn-cdn/poc/update-layout-schema/schemas/json/component/header-component.schema.v1.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Header component",
    "description": "Schema that describes the layout configuration for a header component.",
    "type": "object",
    "properties": {
        "id": {
            "$ref": "https://raw.githubusercontent.com/Altinn/altinn-cdn/poc/update-layout-schema/schemas/json/component/common-defs.schema.v1.json#/$defs/id"
        },
        "type": {
            "type": "string",
            "title": "Type",
            "description": "The component type.",
            "const": "Header"
        },
        "textResourceBindings": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string"
                }
            },
            "required": [
                "title"
            ]
        },
        "size": {
            "title": "Header size",
            "description": "'L'=<h2>, 'M'=<h3>, 'S'=<h4>",
            "type": "string",
            "enum": [
                "L",
                "M",
                "S",
                "h2",
                "h3",
                "h4"
            ]
        }
    },
    "required": [
        "id",
        "type",
        "textResourceBindings",
        "size"
    ]
}